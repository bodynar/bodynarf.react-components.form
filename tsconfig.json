{
	"compilerOptions": {
		"target": "esnext",
		"jsx": "react-jsx",
		"module": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist",
		"incremental": true,
		"moduleResolution": "Node"
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
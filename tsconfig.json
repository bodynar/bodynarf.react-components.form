{
	"compilerOptions": {
		"target": "esnext",
		"jsx": "react-jsx",
		"module": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"incremental": true,
		"moduleResolution": "Node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"baseUrl": "./",
		"paths": {
			"@bbr.form": [
				"./src"
			],
			"@bbr.form/components": [
				"./src/components"
			],
			"@bbr.form/store": [
				"./src/store"
			],
			"@bbr.form/store/*": [
				"./src/store/*"
			],
			"@bbr.form/types": [
				"./src/types"
			],
			"@bbr.form/components/*": [
				"./src/components/*"
			],
			"@bbr.form/utils": [
				"./src/utils"
			],
			"@bbr.form/validators": [
				"./src/utils/validators"
			]
		}
	},
	"include": [
		"src",
	]
}